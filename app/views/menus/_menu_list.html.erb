<h4 class="card-title mt-3 text-center">Menu Lists</h4>
<table id = "menus_table">
  <tr>
    <th><h4>Name</h4></th>
    <th><h4>Price</h4></th> 
    <th colspan = "3"><h4>Action</h4></th>
  </tr>   
  <% @menus.each do |menu| %>
    <tr>
      <td><%= menu.name %></td>
      <td><%= menu.price %></td>
      <td><%= link_to 'Edit Menu',  edit_menu_path(menu), :class => "btn btn-primary btn-sm" %></td>
      <td><%= link_to 'Delete', menu_path(menu) ,method: :delete, :class => "btn btn-danger btn-md"%></td>
    </tr>
  <% end %>
</table>
       